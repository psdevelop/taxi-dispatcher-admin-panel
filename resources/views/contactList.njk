{% extends 'app' %} {% block content %}
<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Contact List</h3>
    </div>

    <div class="panel-body">

        <!-- new button -->
        <a class="btn btn-xs btn-success" href="/category/create">
            <i class="fa fa-plus"></i> New
        </a>

        <!-- listing -->
        <table class="table table-stripped table-hover">
            <thead>
                <tr>
                    <th width="100">ID</th>
                    <th>Contact</th>
                    <th width="150"></th>
                </tr>
            </thead>
            <tbody>
                {% for contact in contacts %}
                <tr>
                    <td>{{ contact.id }}</td>

                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
